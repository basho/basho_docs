aside#nav-container role="complementary"
  nav.overview#primary-nav role="nav"
    div#primary-nav-content
      h2.responsive-link
        a.responsive-toggle
      form action="http://search.basho.com"
        div.nav-field-container
          div#icon-container-search
            div.icon-container
              span(aria-hidden="true" data-icon="&#xf002;" class="nav-icon nav-icon-search")
            span.separator
              |
                &#124;
          input#main-search size="5" type="search" placeholder="Search" name="q"
      div.clear
      h3.responsive-link.visit-basho
        a href="http://www.basho.com"
          div.icon-container
            span(aria-hidden="true" data-icon="&#xe003;" class="nav-icon")
          span.separator
            |
              &#124;
          span.menu-title == I18n.t(:visit_basho)
          div.clear
      h3.responsive-link
        a href="/index.html"
          div.icon-container
            span(aria-hidden="true" data-icon="&#xe003;" class="nav-icon")
          span.separator
            |
              &#124;
          span.menu-title == I18n.t(:all_projects)
          div.clear
      - project = data.page.project || $default_project
      - global_nav[project].each do |section|
        - add_class = section['class'] || ''
        - nav_data, active = build_nav(section['sub'], add_class)
        h3(class=(active ? "active #{add_class}" : add_class))
          div.icon-container
            - if section['title'] == 'Start Here'
              span(aria-hidden="true" data-icon="&#xf0e7;" class="nav-icon")
            - if section['title'] == 'Riak for Developers' || section['title'] == 'Riak CS for Developers'
              span(aria-hidden="true" data-icon="&#xe005;" class="nav-icon")
            - if section['title'] == 'Riak for Operators' || section['title'] == 'Riak CS for Operators' || section['title'] == 'Operating Riak Enterprise'
              span(aria-hidden="true" data-icon="&#xf013;" class="nav-icon")
            - if section['title'] == 'Theory & Concepts'
              span(aria-hidden="true" data-icon="&#xf0c3;" class="nav-icon")
            - if section['title'] == 'Community'
              span(aria-hidden="true" data-icon="&#xe000;" class="nav-icon")
            - if section['title'] == 'APIs' || section['title'] == 'S3 Clients'
              span(aria-hidden="true" data-icon="&#xe001;" class="nav-icon")
            - if section['title'] == 'All Riak Projects'
              span(aria-hidden="true" data-icon="&#xe003;" class="nav-icon")
            - if section['title'] == 'Installing'
              span(aria-hidden="true" data-icon="&#xe007;" class="nav-icon")
            - if section['title'] == 'Multi Data Center'
              span(aria-hidden="true" data-icon="&#xe006;" class="nav-icon")
            - if section['title'] == 'Configuring'
              span(aria-hidden="true" data-icon="&#xe00a;" class="nav-icon")
            - if section['title'] == 'Riak CS Enterprise' || section['title'] == 'OpenStack Integration'
              span(aria-hidden="true" data-icon="&#xe008;" class="nav-icon")
            - if section['title'] == 'References'
              span(aria-hidden="true" data-icon="&#xf02d;" class="nav-icon")
          span.separator
            |
              &#124;
          span.menu-title==section['title']
          div.clear
        ==nav_data
      //
        h3
          a href="/dev/references/apis/"
            div.icon-container
              span(aria-hidden="true" data-icon="&#xe001;" class="nav-icon")
            span.separator
              |
                &#124;
            span.menu-title
              |
                View APIs
            div.clear
      ul / Empty list needed to prevent toggle JS from breaking
  ul#fixed-nav
    li
      a href="https://github.com/basho/basho_docs" target="_blank"
        div.icon-container
          span(aria-hidden="true" data-icon="&#xe004;" class="nav-icon")
        span.separator
          |
            &#124;
        | Available on GitHub
    li
      a href="/community/"
        div.icon-container
          span(aria-hidden="true" data-icon="&#xf059;" class="nav-icon")
        span.separator
          |
            &#124;
        | Get Help